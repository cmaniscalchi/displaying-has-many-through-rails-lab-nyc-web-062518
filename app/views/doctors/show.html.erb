<h2><%= @doctor.name %></h2>

<h3>Department:</h3>
<li><%= @doctor.department %></li><br>
<h3>Patients:</h3>
<% @doctor.patients.each do |patient| %>
  <li>Name: <%= link_to patient.name, patient_path(patient) %></li>
  <li>Age: <%= patient.age %></li><br>
<% end %>
<h3>Appointments:</h3>
<% @doctor.appointments.each do |appointment| %>
  <li><%= link_to "Appointment Detials", appointment %></li>
  <li>Appointment Time: <%= appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li><br>
<% end %>
